<h1>Product Catalog by Category</h1>

<br />

<h2><%= @category %></h2>

<table class="catalog">

<% @movies.each do |item| %>

<tr>

<td>

<div class="image">

<%= link_to (image_tag item.poster, :style => "height:100px"), item %>
</div>

</td>


<td>

<div class="title">

<%= link_to item.name, item %>

</div>

<div class="description">

<%= item.description %>

</div>

</td>

</tr>

<% end %>

</table>
